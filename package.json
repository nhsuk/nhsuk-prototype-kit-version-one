{
  "name": "nhsuk-prototype-kit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node start.js",
    "setup": "npm install && npm run build && npm start",
    "build": "gulp styles",
    "lint": "standard '*.js' 'app/**/*.js' 'app/**/*.hbs'",
    "test": "npm run lint",
    "test-pa11y": "./node_modules/.bin/pa11y-ci"
