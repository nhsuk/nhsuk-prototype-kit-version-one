    "cssnext": "^1.8.4",
    "eslint-plugin-html": "^3.2.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-postcss": "^7.0.0",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-reporter": "^5.0.0",
    "postcss-scss": "^1.0.2",
    "run-sequence": "^2.1.0",
