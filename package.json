  "dependencies": {
    "basic-auth": "^1.1.0",
    "body-parser": "~1.17.1",
    "chalk": "^2.1.0",
    "consolidate": "^0.14.5",
    "cookie-parser": "~1.4.3",
    "cross-spawn": "^5.1.0",
    "debug": "~2.6.3",
    "dotenv": "^4.0.0",
    "express": "~4.15.2",
    "express-handlebars": "^3.0.0",
    "express-session": "^1.15.5",
    "express-validator": "^4.1.1",
    "marked": "^0.3.6",
    "minimist": "^1.2.0",
    "morgan": "~1.8.1",
    "node-fetch": "^1.7.3",
    "pa11y-ci": "^1.2.0",
    "prompt": "^1.0.0",
    "require-dir": "^0.3.2",
    "serve-favicon": "~2.4.2"
